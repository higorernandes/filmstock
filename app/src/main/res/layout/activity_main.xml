<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackgroundDark"
    tools:context="pineapplesoftware.filmstock.view.MainActivity">

    <!-- Toolbar -->
    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null">

        <include
            android:id="@+id/main_toolbar"
            layout="@layout/toolbar_main" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Movie title translucent View -->
        <RelativeLayout
            android:id="@+id/main_translucent_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/transluscent_black_view"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <!-- Movies ViewPager -->
            <com.gigamole.infinitecycleviewpager.HorizontalInfiniteCycleViewPager
                android:id="@+id/main_coverview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:background="@android:color/transparent"
                app:icvp_center_page_scale_offset="30dp"
                app:icvp_min_page_scale_offset="5dp"
                app:icvp_medium_scaled="false"
                app:icvp_max_page_scale="0.8"
                app:icvp_min_page_scale="0.5"
                app:icvp_scroll_duration="1000" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:layout_margin="@dimen/cardview_default_margin"
                app:cardBackgroundColor="@color/colorCardBackgroundDark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <!-- Movie title -->
                    <TextView
                        android:id="@+id/detail_movie_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Scott Pilgrim vs. The World"
                        android:textSize="@dimen/font_size_extra_large"
                        android:layout_marginTop="@dimen/default_medium_margin"
                        android:layout_marginStart="@dimen/default_medium_margin"
                        android:layout_marginEnd="@dimen/default_medium_margin"
                        android:layout_marginBottom="@dimen/default_medium_margin"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/roboto_light"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/detail_movie_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Action, Comedy, Romance • 2010 • 2h33m"
                        android:textSize="@dimen/font_size_medium_large"
                        android:layout_marginStart="@dimen/default_medium_margin"
                        android:layout_marginEnd="@dimen/default_medium_margin"
                        android:layout_marginBottom="@dimen/default_large_margin"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/roboto_light"
                        android:textAlignment="center"
                        android:alpha="0.7"
                        android:maxLines="3"
                        android:ellipsize="end"/>

                    <!-- Separator -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="@dimen/cardview_default_margin"
                        android:layout_marginEnd="@dimen/cardview_default_margin"
                        android:background="@drawable/bg_gradient"/>

                    <TextView
                        android:id="@+id/detail_movie_saved_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Saved in 28/10/2017"
                        android:textSize="@dimen/font_size_medium_large"
                        android:layout_marginTop="@dimen/default_large_margin"
                        android:layout_marginStart="@dimen/default_medium_margin"
                        android:layout_marginEnd="@dimen/default_medium_margin"
                        android:layout_marginBottom="@dimen/default_large_margin"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/roboto_light"
                        android:textAlignment="center"
                        android:alpha="0.7"
                        android:maxLines="3"
                        android:ellipsize="end"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
