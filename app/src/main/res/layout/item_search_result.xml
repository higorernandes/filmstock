<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackgroundDark">

    <!-- CardView -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_list_item_height"
        android:layout_marginTop="@dimen/cardview_small_margin"
        android:layout_marginStart="@dimen/cardview_default_margin"
        android:layout_marginEnd="@dimen/cardview_default_margin"
        android:layout_marginBottom="@dimen/cardview_small_margin"
        app:cardBackgroundColor="@color/colorCardBackgroundDark">

        <!-- Container layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Movie poster thumbnail -->
            <ImageView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/cardview_default_margin"
                android:src="@drawable/baby_driver_poster"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/cardview_default_margin"
                android:layout_marginBottom="@dimen/cardview_default_margin">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Scott Pilgrim Vs The World (2010)"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sci-fi"
                    android:textSize="@dimen/font_size_medium"
                    android:textAllCaps="true"
                    android:fontFamily="@font/roboto_light"
                    android:alpha="0.5"
                    android:textColor="@android:color/white"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>