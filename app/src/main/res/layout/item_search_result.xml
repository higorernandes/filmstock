<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_item_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">

    <!-- Container layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_list_item_height"
        android:layout_marginStart="@dimen/cardview_large_margin"
        android:layout_marginEnd="@dimen/cardview_large_margin"
        android:layout_marginTop="@dimen/cardview_default_margin"
        android:layout_marginBottom="@dimen/cardview_default_margin">

        <!-- Movie poster thumbnail -->
        <ImageView
            android:id="@+id/search_item_movie_poster"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/cardview_large_margin"
            android:background="@color/colorBackgroundDark"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/cardview_default_margin"
            android:orientation="vertical">

            <!-- Movie title -->
            <TextView
                android:id="@+id/search_item_movie_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/lato_bold"
                android:maxLines="2"
                android:text="@string/generic_placeholder_text"
                android:textColor="@android:color/white" />

            <!-- Movie year -->
            <TextView
                android:id="@+id/search_item_movie_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/cardview_default_margin"
                android:ellipsize="end"
                android:fontFamily="@font/lato"
                android:gravity="top"
                android:maxLines="1"
                android:text="@string/generic_placeholder_text"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/font_size_medium_large" />

            <!-- Movie type -->
            <TextView
                android:id="@+id/search_item_movie_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/cardview_default_margin"
                android:layout_gravity="top"
                android:fontFamily="@font/lato"
                android:gravity="bottom"
                android:text="@string/generic_placeholder_text"
                android:textAllCaps="true"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/font_size_medium" />

        </LinearLayout>

    </LinearLayout>

    <!-- Separator -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="100dp"
        android:background="@color/colorWhiteTranslucent"
        android:alpha="0.2"/>

</LinearLayout>