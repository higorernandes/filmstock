<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackgroundDark">

    <!-- CardView -->
    <android.support.v7.widget.CardView
        android:id="@+id/search_item_cardview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_list_item_height"
        android:layout_marginTop="@dimen/cardview_small_margin"
        android:layout_marginStart="@dimen/cardview_default_margin"
        android:layout_marginEnd="@dimen/cardview_default_margin"
        android:layout_marginBottom="@dimen/cardview_small_margin"
        app:cardBackgroundColor="@color/colorCardBackgroundDark">

        <!-- Container layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Movie poster thumbnail -->
            <ImageView
                android:id="@+id/search_item_movie_poster"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/cardview_default_margin"
                android:background="@color/colorBackgroundDark"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/cardview_default_margin"
                android:layout_marginBottom="@dimen/cardview_default_margin"
                android:layout_marginEnd="@dimen/cardview_default_margin">

                <!-- Movie title -->
                <TextView
                    android:id="@+id/search_item_movie_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/generic_placeholder_text"
                    android:fontFamily="@font/roboto_light"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@android:color/white"/>

                <!-- Separator -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/cardview_default_margin"
                    android:background="@drawable/bg_gradient"/>

                <!-- Movie year -->
                <TextView
                    android:id="@+id/search_item_movie_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/generic_placeholder_text"
                    android:textSize="@dimen/font_size_medium_large"
                    android:layout_marginTop="@dimen/cardview_default_margin"
                    android:fontFamily="@font/roboto_thin"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="top"
                    android:textColor="@android:color/white"/>

                <!-- Movie type -->
                <TextView
                    android:id="@+id/search_item_movie_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:layout_marginTop="@dimen/cardview_default_margin"
                    android:alpha="0.5"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/generic_placeholder_text"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_size_medium" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>